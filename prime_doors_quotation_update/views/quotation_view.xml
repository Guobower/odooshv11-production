<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
     <record id="quotation_delivery_address" model="ir.ui.view">
        <field name="name">sale.order.tree.delivery.address</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_quotation_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="partner_shipping_id" groups="sale.group_delivery_invoice_address" context="{'default_type':'delivery'}" options='{"always_reload": True}'/>
            </xpath>
        </field>
     </record>
</odoo>
